{
  "name": "discord-music-rpc",
  "version": "0.8.1",
  "description": "Discord Music RPC Application",
  "homepage": "https://github.com/KanashiiDev/discord-music-rpc",
  "main": "main.js",
  "keywords": [
    "discord",
    "electron",
    "rpc",
    "rich presence",
    "extension",
    "music",
    "radio",
    "server",
    "tray"
  ],
  "author": {
    "name": "KanashiiDev",
    "email": "kanashiidev0@gmail.com",
    "url": "https://github.com/KanashiiDev"
  },
  "license": "MIT",
  "engines": {
    "node": ">=22.11.0"
  },
  "scripts": {
    "start": "node server.js",
    "start:app": "electron .",
    "clean": "rimraf dist",
    "build:win": "npm run clean && electron-builder --win --x64 --publish=never",
    "build:mac": "npm run clean && electron-builder --mac --x64 --publish=never",
    "build:mac:arm64": "npm run clean && electron-builder --mac --arm64 --publish=never",
    "build:mac:all": "npm run clean && electron-builder --mac --x64 --arm64 --publish=never",
    "build:mac:universal": "npm run clean && electron-builder --mac --universal --publish=never",
    "build:linux": "npm run clean && electron-builder --linux --x64 --publish=never",
    "build:linux:arm64": "npm run clean && electron-builder --linux --arm64 --publish=never",
    "build:linux:all": "npm run clean && electron-builder --linux --x64 --arm64 --publish=never",
    "build:rpm": "npm run clean && electron-builder --linux rpm --x64 --publish=never",
    "build:rpm:arm64": "npm run clean && electron-builder --linux rpm --arm64 --publish=never",
    "build:rpm:all": "npm run clean && electron-builder --linux rpm --x64 --arm64 --publish=never",
    "build:deb": "npm run clean && electron-builder --linux deb --x64 --publish=never",
    "build:deb:arm64": "npm run clean && electron-builder --linux deb --arm64 --publish=never",
    "build:deb:all": "npm run clean && electron-builder --linux deb --x64 --arm64 --publish=never",
    "build:ubuntu": "npm run build:deb",
    "build:debian": "npm run build:deb",
    "build:fedora": "npm run build:rpm",
    "build:chrome": "cross-env TARGET=chrome node scripts/buildExtensions.js",
    "build:firefox": "cross-env TARGET=firefox node scripts/buildExtensions.js",
    "build:extensions": "npm run build:chrome && npm run build:firefox",
    "pack": "electron-builder --dir",
    "pack:chrome": "cross-env TARGET=chrome node scripts/packExtensions.js",
    "pack:firefox": "cross-env TARGET=firefox node scripts/packExtensions.js",
    "pack:extensions": "npm run pack:chrome && npm run pack:firefox",
    "build-and-pack": "npm run build:extensions && npm run pack:extensions",
    "build-and-pack:chrome": "npm run build:chrome && npm run pack:chrome",
    "build-and-pack:firefox": "npm run build:firefox && npm run pack:firefox",
    "prepare-release": "npm run build-and-pack && node scripts/prepareRelease.js"
  },
  "dependencies": {
    "@xhayper/discord-rpc": "^1.3.0",
    "cors": "^2.8.5",
    "electron-log": "^5.4",
    "electron-updater": "^6.6.2",
    "express": "^5.1.0",
    "semver": "^7.7.3",
    "simple-json-db": "^2.0.0"
  },
  "devDependencies": {
    "acorn": "^8.15.0",
    "archiver": "^7.0.1",
    "autoprefixer": "^10.4.22",
    "cross-env": "^10.1.0",
    "electron": "^39.2.2",
    "electron-builder": "^26.0.18",
    "fs-extra": "^11.3.2",
    "postcss": "^8.5.6",
    "rimraf": "^6.1.2"
  },
  "build": {
    "appId": "com.kanashiidev.discord.music.rpc",
    "productName": "Discord Music RPC",
    "copyright": "Copyright Â© 2025 KanashiiDev",
    "electronLanguages": [
      "en-US"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "KanashiiDev",
        "repo": "discord-music-rpc"
      }
    ],
    "asar": true,
    "compression": "maximum",
    "directories": {
      "output": "dist/${platform}"
    },
    "win": {
      "artifactName": "Discord-Music-RPC-${version}-${arch}-installer.exe",
      "target": "nsis",
      "icon": "assets/icon/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "rpm",
        "deb"
      ],
      "artifactName": "discord-music-rpc-${version}-${arch}.${ext}",
      "executableName": "discord-music-rpc",
      "category": "Audio",
      "icon": "assets/icon",
      "maintainer": "KanashiiDev <kanashiidev0@gmail.com>",
      "synopsis": "Show music from ANY website on your Discord!",
      "description": "Discord Music RPC Application - Show music from ANY website on your Discord!",
      "desktop": {
        "entry": {
          "Name": "Discord Music RPC",
          "Comment": "Show music from ANY website on your Discord!",
          "Keywords": "discord;music;rpc;presence;",
          "Categories": "Audio;Music;",
          "Icon": "discord-music-rpc"
        }
      }
    },
    "rpm": {
      "depends": [
        "glibc",
        "libX11",
        "libxcb"
      ]
    },
    "deb": {
      "depends": [
        "libc6",
        "libx11-6",
        "libxcb1"
      ],
      "priority": "optional"
    },
    "mac": {
      "identity": "-",
      "hardenedRuntime": false,
      "category": "public.app-category.utilities",
      "target": [
        {
          "target": "dmg"
        }
      ],
      "artifactName": "Discord-Music-RPC-${version}-${arch}.${ext}",
      "icon": "assets/icon/icon.icns",
      "darkModeSupport": true,
      "extendInfo": {
        "LSUIElement": true
      }
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "allowToChangeInstallationDirectory": true,
      "shortcutName": "${productName}",
      "installerSidebar": "assets/installer/sidebar.bmp",
      "installerIcon": "assets/icon/icon.ico",
      "uninstallDisplayName": "${productName}",
      "uninstallerIcon": "assets/icon/icon.ico"
    },
    "files": [
      "main.js",
      "scripts/electron-log.js",
      "scripts/configManagement.js",
      "utils.js",
      "server.js",
      "assets/**/*",
      "public/**",
      "package.json",
      "!**/*.map",
      "!**/*.md"
    ],
    "extraResources": [
      {
        "from": "scripts/discord_ipc_diagnostic.sh",
        "to": "discord_ipc_diagnostic.sh"
      }
    ],
    "asarUnpack": [
      "**/*.node"
    ],
    "afterPack": "./scripts/buildCleanup.js"
  }
}
