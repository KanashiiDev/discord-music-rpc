{
  "manifest_version": 3,
  "name": "Discord Music RPC",
  "description": "Show music from any website on your Discord!",
  "homepage_url": "https://github.com/KanashiiDev/discord-music-rpc",

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": ["tabs", "storage", "contextMenus", "userScripts"],
  "host_permissions": ["*://*/*"],
  "content_scripts": [
    {
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/16x16.png",
      "32": "icons/32x32.png",
      "48": "icons/48x48.png",
      "64": "icons/64x64.png",
      "128": "icons/128x128.png"
    }
  },
  "icons": {
    "16": "icons/16x16.png",
    "32": "icons/32x32.png",
    "48": "icons/48x48.png",
    "64": "icons/64x64.png",
    "128": "icons/128x128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*", "popup/selector/selector.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
