{
  "manifest_version": 2,
  "name": "Discord Music RPC",
  "description": "Show music from any website on your Discord!",
  "homepage_url": "https://github.com/KanashiiDev/discord-music-rpc",

  "background": {
    "scripts": ["libs/browser-polyfill.js", "libs/pako.js", "background.js"],
    "persistent": false
  },

  "permissions": ["tabs", "storage", "contextMenus", "*://*/*"],

  "content_scripts": [
    {
      "run_at": "document_idle"
    }
  ],

  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/16x16.png",
      "32": "icons/32x32.png",
      "48": "icons/48x48.png",
      "64": "icons/64x64.png",
      "128": "icons/128x128.png"
    }
  },

  "icons": {
    "16": "icons/16x16.png",
    "32": "icons/32x32.png",
    "48": "icons/48x48.png",
    "64": "icons/64x64.png",
    "128": "icons/128x128.png"
  },
  "web_accessible_resources": ["icons/*", "popup/selector/selector.css"],
  "browser_specific_settings": {
    "gecko": {
      "id": "discord-rpc@kanashiidev.local",
      "strict_min_version": "136.0",
      "data_collection_permissions": {
        "required": ["websiteContent"]
      }
    }
  },
  "user_scripts": {}
}
